
<p id="notice"><%= notice %></p>

<a href="/flights/new" class="waves-effect waves-light btn deep-orange darken-2">New Flight</a>
<div class="container">
<h3>Flights</h3>

<table>
  <thead>
    <tr>
      <th>DATE</th>
      <th>FROM</th>
      <th>TO</th>
      <th>Plane</th>
      <th>Remaining seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.date %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.plane_id %></td>
        <td><%= flight.remaining_seats %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
