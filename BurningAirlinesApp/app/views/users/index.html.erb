<p id="notice"><%= notice %></p>
<div class="title">

<h2>Users<img src="http://i.imgur.com/ulW55qc.png" alt="title" class="img"></h2>
</div>
<div class="container">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Reservation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.reservation_id %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="button">
<a href="/users/new" class="waves-effect waves-light btn deep-orange darken-2">New User</a>
</div>
