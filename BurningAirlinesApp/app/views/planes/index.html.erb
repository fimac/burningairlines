<p id="notice"><%= notice %></p>
<h1>Planes</h1>
<div class="container">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Row</th>
      <th>Col</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planes.each do |plane| %>
      <tr>
        <td><%= plane.name %></td>
        <td><%= plane.row %></td>
        <td><%= plane.col %></td>
        <td><%= link_to 'Show', plane %></td>
        <td><%= link_to 'Edit', edit_plane_path(plane) %></td>
        <td><%= link_to 'Destroy', plane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="button">
<a href="/planes/new" class="waves-effect waves-light btn deep-orange darken-2">New Plane</a>
</div>
